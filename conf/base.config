process {

    errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
    maxRetries    = 5
    maxErrors     = '-1'

    // Default
    cpus   = 1
    memory = { check_max( 500.MB * task.attempt, 'memory' ) }
    time   = { check_max( 30.min * task.attempt, 'time' ) }

    environment {
        PATH = "$projectDir/bin:$PATH"
    }
}